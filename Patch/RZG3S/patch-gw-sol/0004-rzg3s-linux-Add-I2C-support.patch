+-	writeb(val, riic->base + RIIC_ICDRT);
++	riic_writeb(riic, val, RIIC_ICDRT);
+ 
+ 	return IRQ_HANDLED;
+ }
+@@ -201,9 +211,9 @@ static irqreturn_t riic_tend_isr(int irq, void *data)
+ {
+ 	struct riic_dev *riic = data;
+ 
